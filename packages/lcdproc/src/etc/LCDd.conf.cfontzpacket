[server]
DriverPath=/usr/local/lib/lcdproc/
Driver=CFontzPacket
Bind=127.0.0.1
Port=13666
User=nobody
ServerScreen=no
WaitTime=15
BackLight=on
PrevScreenKey=Left
NextScreenKey=Right
ToggleRotateKey=Enter

[menu]
MenuKey=Escape
EnterKey=Enter
UpKey=Up
DownKey=Down
LeftKey=Left
RightKey=Right

[CFontzPacket]
Model=635
Device=/dev/ttyUSB0
Contrast=1000
Brightness=1000
OffBrightness=50
Reboot=yes
USB=yes
Speed=115200

